{
  "name": "PLTutor",
  "version": "0.1.0",
  "scripts": {
    "build": "browserify -t [ babelify ] pl.js > plparser.js",
    "watch": "watch \"npm run build\" ."
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.3.13",
    "browserify": "latest",
    "watch": "latest"
  },
  "dependencies": {
    "babelify": "^7.2.0",
    "uglify-js": "latest"
  }
}

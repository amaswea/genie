{
    "manifest_version": 2,
    "name": "Action Detector",
    "description": "This extension shows you what actions are possible on this page",
    "version": "1.0",
    "browser_action": {
        "default_icon": "resources/icon.png",
        "default_title": "See what all you can do on this page!"
    },
    "background": {
        "scripts": [
            "scripts/ext/jquery-3.0.0.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "css/styles.css"
            ],
            "js": [
                "scripts/ext/jquery-3.0.0.js",
                "scripts/content.js",
                "scripts/ext/keypress.js",
                "scripts/ext/lodash.js",
                "scripts/dialog.js", 
                "scripts/command.js", 
                "scripts/util.js"
            ], 
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "tabs",
        "<all_urls>", 
        "storage"
    ],

    "web_accessible_resources": [
        "scripts/ext/jquery-3.0.0.js",
        "scripts/performAction.js",
        "scripts/monitor.js"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y",
                "chromeos": "Ctrl+Shift+U",
                "linux": "Ctrl+Shift+J"
            }
        }
    }
}